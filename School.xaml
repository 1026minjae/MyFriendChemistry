        <Rectangle x:Name="GreenB" HorizontalAlignment="Left" Height="442" RadiusY="23.5" RadiusX="23.5" Stroke="#FF7AAAD4" StrokeThickness="2" VerticalAlignment="Top" Width="442" Fill="#FFBCE889" Margin="35,35,0,0"  Visibility="Hidden"/>
        <TextBox x:Name="explain" HorizontalAlignment="Left" Height="367" Margin="50,95,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="412" VerticalScrollBarVisibility="Visible" FontFamily="Global User Interface" FontSize="21.333"  Visibility="Hidden" IsReadOnly="True"/>
        <Label x:Name="title" Content="화학이란?" HorizontalAlignment="Left" Height="45" Margin="50,44,0,0" VerticalAlignment="Top" Width="412" FontFamily="Global User Interface" FontSize="32" Foreground="White"  Visibility="Hidden"/>
