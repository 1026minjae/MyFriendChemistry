            <Button x:Name="B16" Content="동위원소에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B16_Click"/>
            <Button x:Name="B17" Content="오비탈에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B17_Click"/>
