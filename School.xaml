            <Button x:Name="B14" Content="ph에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B14_Click"/>
