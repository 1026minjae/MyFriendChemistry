            <Button x:Name="B1" Content="화학에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B1_Click"/>
            <Button x:Name="B2" Content="원자에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B2_Click"/>
            <Button x:Name="B3" Content="이온에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B3_Click"/>
            <Button x:Name="B4" Content="원소를 구별하는 방법에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B4_Click"/>
            <Button x:Name="B5" Content="분자에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B5_Click"/>
