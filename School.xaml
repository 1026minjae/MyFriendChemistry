        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyFriendChemistry"
        mc:Ignorable="d"
        Title="화학마당" Height="512" Width="512" ResizeMode="NoResize" Icon="내친구 화학이.ico" WindowStyle="None" Background="{x:Null}" MouseDown="School_MouseDown" AllowsTransparency="True" FontFamily="Global User Interface" WindowStartupLocation="CenterScreen">
    <Grid>
