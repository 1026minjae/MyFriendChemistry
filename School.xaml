            <Button x:Name="B7" Content="녹는점과 어는점에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B7_Click"/>
            <Button x:Name="B8" Content="끓는점에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B8_Click"/>
            <Button x:Name="B9" Content="밀도에 대해서 알아보자!" Height="32" Width="444" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#FFBCE889" BorderBrush="{x:Null}" Padding="0,1,0,0" BorderThickness="0" Click="B9_Click"/>
